{
  "name": "influx-crypto-watcher",
  "version": "1.0.0",
  "description": "Cryptocurrencie market data watcher and storing into influxdb",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=TEST nyc mocha -r ts-node/register test/index.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prettier": "prettier --write 'src/**/*.ts'",
    "docker-start": "docker-compose -f ./docker/docker-compose.yml up -d",
    "docker-stop": "docker-compose -f ./docker/docker-compose.yml stop",
    "pretest": "node_modules/tslint/bin/tslint --project .",
    "start": "ts-node -P ./tsconfig.json src/index.ts"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "all": true
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "boom": "^7.2.2",
    "ccxt": "^1.17.513",
    "death": "^1.1.0",
    "hapi": "^17.8.1",
    "inert": "^5.1.2",
    "influx": "^5.0.7",
    "joi": "^14.3.0",
    "moment": "^2.22.2",
    "mongoose": "^5.3.12",
    "uuid": "^3.3.2",
    "vision": "^5.4.3",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^3.0.5",
    "@types/hapi": "^17.6.4",
    "@types/mocha": "^5.2.5",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.3.1",
    "@types/uuid": "^3.4.4",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "lout": "^11.1.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.6"
  }
}
